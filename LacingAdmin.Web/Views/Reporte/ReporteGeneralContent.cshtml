@model LacingAdmin.Web.Models.ViewModels.ReporteViewModel

<html>
<head>
    <link href="~/Content/themes/main/assets/css/site.min.css" rel="stylesheet" />

    <style>
        html {
          min-height: 100%;
          position: relative;
        }
        body {
          margin: 0;
          margin-bottom: 40px;
        }
        footer {
          position: absolute;
          bottom: 0;
          width: 100%;
          height: 40px;
        }
    </style>
</head>
<body style="padding-top:25px;">
    <div class="row" style="height:120px">
        <div style="text-align:left; width:20%; float:left">
            <img style="height:90px" src="~/Content/lacing/urp_logo_png.png" />
        </div>
        <div style="text-align:center; width:60%; float:left">
            <h1 style="font-size:34px">Reporte General Lacing</h1>
        </div>
        <div style="text-align:right; width:20%; float:right">
            <img style="height:80px" src="~/Content/lacing/logo-lacing.png" />
        </div>
    </div>
    <div class="row">
        <table border="1">
            <thead>
                <tr>
                    <th>FECHA</th>
                    <th>LABORATORIO</th>
                    <th>DOCENTE</th>
                    <th>CURSO</th>
                    <th>CARRERA</th>
                    <th>HORA INICIO</th>
                    <th>HORA FIN</th>
                    <th>HORA INGRESO</th>
                    <th>HORA SALIDA</th>
                    <th>DIFERENCIA ENTRADA (min.)</th>
                    <th>ESTADO</th>
                    <th>OBSERVACIONES</th>
                    <th>TIPO</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>FECHA</th>
                    <th>LABORATORIO</th>
                    <th>DOCENTE</th>
                    <th>CURSO</th>
                    <th>CARRERA</th>
                    <th>HORA INICIO</th>
                    <th>HORA FIN</th>
                    <th>HORA INGRESO</th>
                    <th>HORA SALIDA</th>
                    <th>DIFERENCIA ENTRADA (min.)</th>
                    <th>ESTADO</th>
                    <th>OBSERVACIONES</th>
                    <th>TIPO</th>
                </tr>
            </tfoot>
            @if (Model.ListaReporteGeneral != null && Model.ListaReporteGeneral.Count > 0)
            {
                foreach (var item in Model.ListaReporteGeneral)
                {
                    <tr>
                        <td>@item.Fecha</td>
                        <td style="text-align:center">@item.Laboratorio</td>
                        <td>@item.Docente</td>
                        <td>@item.Curso</td>
                        <td>@item.Carrera</td>
                        <td style="text-align:center">@item.HoraInicio</td>
                        <td style="text-align:center">@item.HoraFin</td>
                        <td style="text-align:center">@item.HoraIngreso</td>
                        <td style="text-align:center">@item.HoraSalida</td>
                        <td style="text-align:center">@item.DiferenciaEntrada</td>
                        <td style="text-align:center">@item.Estado</td>
                        <td>@item.Observacion</td>
                        <td>@item.Tipo</td>
                    </tr>

                }
            }
            else
            {
                <tbody>
                    <tr>
                        <td>
                            No se obtuvo ningún resultado.
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
    <footer>
        @*<p style="font-size:14px">Generado el @DateTime.Now.ToString("dd/MM/yyyy hh:mm")</p>*@
        <div class="site-footer-legal">© 2021 Lacing Administrador</div>
    </footer>
</body>
</html>
